<UserControl x:Class="NetworkSoftwareManager.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkSoftwareManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2962FF" Padding="15">
            <TextBlock Text="Network Software Manager - Login" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="5" 
                Margin="50,30" 
                Padding="30" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="400">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title -->
                <TextBlock Grid.Row="0" 
                           Text="Login" 
                           FontSize="24" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center"/>
                
                <!-- Username -->
                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                    <Label Content="Username:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"/>
                </StackPanel>
                
                <!-- Password -->
                <StackPanel Grid.Row="2" Margin="0,0,0,15">
                    <Label Content="Password:" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Padding="8"
                                 BorderThickness="1"
                                 BorderBrush="#CCCCCC"/>
                </StackPanel>
                
                <!-- Remember Credentials -->
                <CheckBox Grid.Row="3" 
                          Content="Remember credentials" 
                          IsChecked="{Binding RememberCredentials}"
                          Margin="0,0,0,15"/>
                
                <!-- Login Button -->
                <Button Grid.Row="4" 
                        Content="Login" 
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"
                        Padding="10,8" 
                        Background="#2962FF" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Margin="0,0,0,15"/>
                
                <!-- Status Message -->
                <TextBlock Grid.Row="5" 
                           Text="{Binding StatusMessage}" 
                           TextWrapping="Wrap"
                           Foreground="{Binding StatusMessage, Converter={StaticResource MessageColorConverter}}"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <TextBlock Text="Â© 2025 Network Software Manager" 
                       Foreground="#555555" 
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>